<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E8EA"
    tools:context=".c_menu_donationPage">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="377dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:hint="Select Bank (FPX)"
        android:minHeight="48dp"
        android:textColorHint="#fe4a49"
        app:boxStrokeColor="#b8336a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDonation"
        app:layout_constraintVertical_bias="0.0">

        <AutoCompleteTextView
            android:id="@+id/bankOpt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:textColor="#b8336a"
            android:textColorHint="#fe4a49" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Minimum amount is RM10 only."
        android:textColor="#b8336a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:text="FLOOD CONTRIBUTOR &amp; TRANSACTION FUND MANAGEMENT SYSTEM"
        android:textColor="#b8336a"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/victimTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DONATE"
        android:textColor="#b8336a"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Please select your contribution amount:"
        android:textColor="#b8336a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victimTitle"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/optRM10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/c_custom_input"
                android:padding="15dp"
                android:text="RM10"
                android:textAlignment="center"
                android:textColor="#b8336a"
                android:textSize="16dp" />

            <Space
                android:layout_width="28dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/optRM25"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/c_custom_input"
                android:padding="15dp"
                android:text="RM25"
                android:textAlignment="center"
                android:textColor="#b8336a"
                android:textSize="16dp" />

            <Space
                android:layout_width="28dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/optRM50"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/c_custom_input"
                android:padding="15dp"
                android:text="RM50"
                android:textAlignment="center"
                android:textColor="#b8336a"
                android:textSize="16dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/optRM100"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/c_custom_input"
                android:padding="15dp"
                android:text="RM100"
                android:textAlignment="center"
                android:textColor="#b8336a"
                android:textSize="16dp" />

            <Space
                android:layout_width="28dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/optRM500"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/c_custom_input"
                android:padding="15dp"
                android:text="RM500"
                android:textAlignment="center"
                android:textColor="#b8336a"
                android:textSize="16dp" />

            <Space
                android:layout_width="28dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/optRM1000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/c_custom_input"
                android:padding="15dp"
                android:text="RM1000"
                android:textAlignment="center"
                android:textColor="#b8336a"
                android:textSize="16dp" />
        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/editTextDonation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/c_custom_input"
        android:drawableStart="@drawable/c_custom_money"
        android:drawableLeft="@drawable/c_custom_money"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Enter other amounts"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#b8336a"
        android:textColorHint="#fe4a49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/paymentBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#fe4a49"
        android:text="PAY"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>